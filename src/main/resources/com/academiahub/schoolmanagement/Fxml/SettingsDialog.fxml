<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="20" styleClass="settings-dialog" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.academiahub.schoolmanagement.Controllers.SettingsDialogController">
    <padding>
        <Insets top="20" right="25" bottom="20" left="25"/>
    </padding>

    <!-- Settings Header -->
    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="settings-header">
        <FontIcon iconLiteral="fas-cog" iconSize="24" styleClass="settings-icon"/>
        <Label text="Paramètres" styleClass="settings-title"/>
    </HBox>

    <!-- Settings Content -->
    <TabPane styleClass="settings-tabs" tabClosingPolicy="UNAVAILABLE">
        <!-- Profile Tab -->
        <Tab styleClass="settings-tab">
            <graphic>
                <HBox spacing="8" alignment="CENTER">
                    <FontIcon iconLiteral="fas-user" iconSize="14" styleClass="glyph-icon"/>
                    <Label text="Profil"/>
                </HBox>
            </graphic>
            <content>
                <VBox spacing="20" styleClass="tab-content">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="setting-item">
                        <FontIcon iconLiteral="fas-key" iconSize="16" styleClass="setting-icon"/>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Mot de passe" styleClass="setting-title"/>
                            <Label text="Modifiez votre mot de passe" styleClass="setting-description"/>
                        </VBox>
                        <Button text="Modifier" styleClass="edit-button" onAction="#handleChangePassword">
                            <graphic>
                                <FontIcon iconLiteral="fas-edit" iconSize="12" styleClass="glyph-icon"/>
                            </graphic>
                        </Button>
                    </HBox>

                    <Separator/>

                    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="setting-item">
                        <FontIcon iconLiteral="fas-user-circle" iconSize="16" styleClass="setting-icon"/>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Informations du compte" styleClass="setting-title"/>
                            <Label text="Modifiez vos informations personnelles" styleClass="setting-description"/>
                        </VBox>
                        <Button text="Modifier" styleClass="edit-button" onAction="#handleEditProfile">
                            <graphic>
                                <FontIcon iconLiteral="fas-edit" iconSize="12" styleClass="glyph-icon"/>
                            </graphic>
                        </Button>
                    </HBox>
                </VBox>
            </content>
        </Tab>

        <!-- Interface Tab -->
        <Tab styleClass="settings-tab">
            <graphic>
                <HBox spacing="8" alignment="CENTER">
                    <FontIcon iconLiteral="fas-desktop" iconSize="14" styleClass="glyph-icon"/>
                    <Label text="Interface"/>
                </HBox>
            </graphic>
            <content>
                <VBox spacing="20" styleClass="tab-content">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="setting-item">
                        <FontIcon iconLiteral="fas-palette" iconSize="16" styleClass="setting-icon"/>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Thème" styleClass="setting-title"/>
                            <Label text="Personnalisez l'apparence de l'application" styleClass="setting-description"/>
                        </VBox>
                        <ComboBox fx:id="themeComboBox" styleClass="settings-combo"/>
                    </HBox>

                    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="setting-item">
                        <FontIcon iconLiteral="fas-language" iconSize="16" styleClass="setting-icon"/>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Langue" styleClass="setting-title"/>
                            <Label text="Choisissez votre langue préférée" styleClass="setting-description"/>
                        </VBox>
                        <ComboBox fx:id="languageComboBox" styleClass="settings-combo"/>
                    </HBox>
                </VBox>
            </content>
        </Tab>
    </TabPane>
</VBox>
