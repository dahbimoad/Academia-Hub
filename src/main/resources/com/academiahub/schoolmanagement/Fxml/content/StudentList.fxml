<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.academiahub.schoolmanagement.Controllers.StudentListController"
      styleClass="content-view">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Label text="%studentlist.title" styleClass="section-title"/>

    <!-- Search and Filter Section -->
    <VBox spacing="20" styleClass="search-section">
        <padding>
            <Insets top="15" right="20" bottom="15" left="20"/>
        </padding>

        <!-- Search and Filter Container -->
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="search-filter-container">
            <!-- Search Field with Icon -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="search-box" maxWidth="230">
                <FontIcon iconLiteral="fas-search" iconSize="14" styleClass="search-icon"/>
                <TextField fx:id="searchField"
                          promptText="%studentlist.search.prompt"
                          HBox.hgrow="ALWAYS"
                          styleClass="modern-input"/>
            </HBox>

            <!-- Filters Section -->
            <HBox spacing="10" alignment="CENTER">
                <ComboBox fx:id="moduleFilter"
                         promptText="%studentlist.filter.modules"
                         styleClass="modern-combo"
                         prefWidth="200"/>
                <ComboBox fx:id="promotionFilter"
                         promptText="%studentlist.filter.promotions"
                         styleClass="modern-combo"
                         prefWidth="200"/>
            </HBox>

            <!-- Export Button -->
            <Button fx:id="exportButton"
                    text="%button.export.csv"
                    styleClass="export-button">
                <graphic>
                    <FontIcon iconLiteral="fas-file-export" iconSize="14"/>
                </graphic>
            </Button>
        </HBox>
    </VBox>

    <!-- Students Table -->
    <TableView fx:id="studentsTable" VBox.vgrow="ALWAYS" styleClass="data-table">
        <columns>
            <TableColumn fx:id="matriculeCol" text="%studentlist.matricule" prefWidth="150"/>
            <TableColumn fx:id="nomCol" text="%studentlist.name" prefWidth="150"/>
            <TableColumn fx:id="prenomCol" text="%studentlist.firstname" prefWidth="150"/>
            <TableColumn fx:id="emailCol" text="%studentlist.email" prefWidth="200"/>
            <TableColumn fx:id="promotionCol" text="%studentlist.promotion" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>