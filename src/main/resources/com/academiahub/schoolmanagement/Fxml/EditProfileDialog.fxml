<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="15" styleClass="dialog-content"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.academiahub.schoolmanagement.Controllers.EditProfileDialogController">

    <padding>
        <Insets top="20" right="25" bottom="20" left="25"/>
    </padding>

    <!-- Header -->
    <HBox styleClass="dialog-header" spacing="10">
        <FontIcon iconLiteral="fas-user-edit" iconSize="24" styleClass="glyph-icon"/>
        <VBox spacing="5">
            <Label text="%profile.title" styleClass="dialog-title"/>
            <Label text="%profile.subtitle" styleClass="dialog-subtitle"/>
        </VBox>
    </HBox>

    <!-- Role Info -->
    <HBox styleClass="setting-item" spacing="10" alignment="CENTER_LEFT">
        <FontIcon iconLiteral="fas-user-tag" iconSize="16" styleClass="setting-icon"/>
        <VBox spacing="3">
            <Label text="%profile.role" styleClass="setting-title"/>
            <Label fx:id="roleLabel" styleClass="setting-description"/>
        </VBox>
    </HBox>

    <!-- Form -->
    <VBox spacing="15" styleClass="form-container">
        <VBox spacing="8">
            <HBox spacing="8" alignment="CENTER_LEFT">
                <FontIcon iconLiteral="fas-user" iconSize="14" styleClass="glyph-icon"/>
                <Label text="%profile.username"/>
            </HBox>
            <TextField fx:id="usernameField" styleClass="input-field"
                      promptText="%profile.username.prompt"/>
        </VBox>
    </VBox>

    <Label fx:id="errorLabel" styleClass="error-label"/>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="%button.cancel" onAction="#handleCancel" styleClass="cancel-button">
            <graphic>
                <FontIcon iconLiteral="fas-times" iconSize="12"/>
            </graphic>
        </Button>
        <Button text="%button.save" onAction="#handleSave" styleClass="save-button" defaultButton="true">
            <graphic>
                <FontIcon iconLiteral="fas-check" iconSize="12"/>
            </graphic>
        </Button>
    </HBox>
</VBox>