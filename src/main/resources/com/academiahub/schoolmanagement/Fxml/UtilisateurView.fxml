<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.academiahub.schoolmanagement.Controllers.UtilisateurController"
      stylesheets="@../Styles/userprof.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Barre de recherche -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Rechercher par nom d'utilisateur ou rôle..." HBox.hgrow="ALWAYS"/>
        <Button text="Réinitialiser" onAction="#actualiserTable" styleClass="button-secondary"/>
    </HBox>

    <!-- Formulaire de saisie -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="100" prefWidth="150"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Nom d'utilisateur:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Mot de passe:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="passwordField"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="1"
                       disable="true"
                       promptText="Le mot de passe sera généré automatiquement"/>

        <Label text="Rôle:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" maxWidth="Infinity"/>
    </GridPane>

    <!-- Boutons d'action -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Ajouter" onAction="#ajouterUtilisateur" styleClass="button-primary"/>
        <Button text="Modifier" onAction="#modifierUtilisateur" styleClass="button-warning"/>
        <Button text="Supprimer" onAction="#supprimerUtilisateur" styleClass="button-danger"/>
        <Button text="Actualiser" onAction="#actualiserTable" styleClass="button-info"/>
    </HBox>

    <!-- TableView -->
    <TableView fx:id="utilisateurTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" minWidth="50" maxWidth="100"/>
            <TableColumn fx:id="colUsername" text="Nom d'utilisateur" minWidth="150"/>
            <TableColumn fx:id="colPassword" text="Mot de passe" minWidth="150"/>
            <TableColumn fx:id="colRole" text="Rôle" minWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>
