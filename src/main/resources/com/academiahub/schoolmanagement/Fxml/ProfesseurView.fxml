<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" styleClass="root" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.academiahub.schoolmanagement.Controllers.ProfesseurController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Barre de recherche -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Rechercher..." HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- TableView -->
    <TableView fx:id="professeurTable" VBox.vgrow="ALWAYS" styleClass="table-view">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="150"/>
            <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="150"/>
            <TableColumn fx:id="colSpecialite" text="Spécialité" prefWidth="150"/>
            <TableColumn fx:id="colUserId" text="User ID" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Formulaire -->
    <VBox spacing="10" styleClass="form-container">
        <Label text="Détails du professeur" styleClass="form-title"/>

        <GridPane hgap="10" vgap="10">
            <TextField fx:id="nomField" promptText="Nom" styleClass="text-field"
                       GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="prenomField" promptText="Prénom" styleClass="text-field"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <TextField fx:id="specialiteField" promptText="Spécialité" styleClass="text-field"
                       GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="userIdField" promptText="User ID" styleClass="text-field"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Modifier" onAction="#modifierProfesseur" styleClass="button-warning"/>
            <Button text="Supprimer" onAction="#supprimerProfesseur" styleClass="button-danger"/>
            <Button text="Exporter Excel" onAction="#exporterExcel" styleClass="button-success"/>
        </HBox>
    </VBox>
</VBox>
