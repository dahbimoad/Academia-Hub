<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="15" styleClass="dialog-content" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.academiahub.schoolmanagement.Controllers.ChangePasswordDialogController">
    <padding>
        <Insets top="20" right="25" bottom="20" left="25"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="dialog-header">
        <FontIcon iconLiteral="fas-key" iconSize="20" styleClass="dialog-icon"/>
        <Label text="Changer le mot de passe" styleClass="dialog-title"/>
    </HBox>

    <!-- Form Content -->
    <GridPane vgap="15" hgap="10">
        <Label text="Ancien mot de passe:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <PasswordField fx:id="currentPasswordField" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="password-field"/>

        <Label text="Nouveau mot de passe:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="newPasswordField" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="password-field"/>

        <Label text="Confirmer mot de passe:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="password-field"/>
    </GridPane>

    <!-- Error Message -->
    <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel" styleClass="cancel-button"/>
        <Button text="Enregistrer" onAction="#handleSave" styleClass="save-button" defaultButton="true"/>
    </HBox>
</VBox>
