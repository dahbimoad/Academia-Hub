<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.academiahub.schoolmanagement.Controllers.UtilisateurController"
      spacing="10">

    <!-- Padding autour du conteneur -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Titre -->
    <Label text="Gestion des Utilisateurs"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- TableView pour afficher la liste des utilisateurs -->
    <TableView fx:id="utilisateurTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="colId"       text="ID"       prefWidth="50"/>
            <TableColumn fx:id="colUsername" text="Username" prefWidth="120"/>
            <TableColumn fx:id="colPassword" text="Password" prefWidth="120"/>
            <TableColumn fx:id="colRole"     text="Role"     prefWidth="120"/>
        </columns>
    </TableView>

    <!-- Formulaire d'ajout/modification -->
    <VBox spacing="10">
        <HBox spacing="10">
            <VBox spacing="5">
                <Label text="Username :"/>
                <TextField fx:id="usernameField" promptText="Username"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Password :"/>
                <PasswordField fx:id="passwordField" promptText="Password"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Role :"/>
                <ComboBox fx:id="roleComboBox" promptText="Select Role">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="ADMIN"/>
                            <String fx:value="PROFESSEUR"/>
                            <String fx:value="SECRETAIRE"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>
        </HBox>

        <!-- Champs supplémentaires pour le rôle Professeur -->
        <VBox spacing="10" fx:id="professeurBox" visible="false" managed="false">
            <HBox spacing="10">
                <VBox spacing="5">
                    <Label text="Nom :"/>
                    <TextField fx:id="nomField" promptText="Nom"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Prénom :"/>
                    <TextField fx:id="prenomField" promptText="Prénom"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Spécialité :"/>
                    <TextField fx:id="specialiteField" promptText="Spécialité"/>
                </VBox>
            </HBox>
        </VBox>
    </VBox>

    <!-- Boutons d'action -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Ajouter"    onAction="#ajouterUtilisateur"/>
        <Button text="Modifier"   onAction="#modifierUtilisateur"/>
        <Button text="Supprimer"  onAction="#supprimerUtilisateur"/>
        <Button text="Actualiser" onAction="#actualiserTable"/>
    </HBox>

</VBox>
