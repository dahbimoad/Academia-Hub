<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.academiahub.schoolmanagement.Controllers.ProfesseurController"
      spacing="10">

    <!-- Padding global pour le conteneur -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Titre -->
    <Label text="Gestion des Professeurs"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- TableView pour lister les professeurs -->
    <TableView fx:id="professeurTable" prefHeight="300">
        <columns>
            <TableColumn text="ID" fx:id="colId" prefWidth="50"/>
            <TableColumn text="Nom" fx:id="colNom" prefWidth="120"/>
            <TableColumn text="Prénom" fx:id="colPrenom" prefWidth="120"/>
            <TableColumn text="Spécialité" fx:id="colSpecialite" prefWidth="150"/>
            <TableColumn text="User ID" fx:id="colUserId" prefWidth="80"/> <!-- Nouvelle colonne pour userId -->
        </columns>
    </TableView>

    <!-- Formulaire d'ajout/modification -->
    <HBox spacing="10">
        <VBox spacing="5">
            <Label text="Nom :"/>
            <TextField fx:id="nomField" promptText="Nom"/>
        </VBox>
        <VBox spacing="5">
            <Label text="Prénom :"/>
            <TextField fx:id="prenomField" promptText="Prénom"/>
        </VBox>
        <VBox spacing="5">
            <Label text="Spécialité :"/>
            <TextField fx:id="specialiteField" promptText="Spécialité"/>
        </VBox>
        <VBox spacing="5">
            <Label text="User ID :"/>
            <TextField fx:id="userIdField" promptText="User ID"/> <!-- Nouveau champ pour userId -->
        </VBox>
    </HBox>

    <!-- Boutons d'action -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Ajouter"    onAction="#ajouterProfesseur"/>
        <Button text="Modifier"   onAction="#modifierProfesseur"/>
        <Button text="Supprimer"  onAction="#supprimerProfesseur"/>
        <Button text="Actualiser" onAction="#actualiserTable"/>
    </HBox>

</VBox>
